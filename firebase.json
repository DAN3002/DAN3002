{
	"functions": {
		"predeploy": [
			"npm run lint && npm run build"
		]
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/",
				"destination": "/index.html"
			},
			{
				"source": "**",
				"function": "app"
			}	
		]
	}
}
